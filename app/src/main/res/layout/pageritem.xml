<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">


    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingEnd="@dimen/dimen_16dp"
        android:paddingStart="@dimen/dimen_16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/image"
            android:layout_width="@dimen/dimen_120dp"
            android:layout_height="@dimen/dimen_120dp"
            android:contentDescription="@string/location_icon"
            android:layout_gravity="center_horizontal"
            app:srcCompat="@drawable/ic_walkthrough1" />

        <TextView
            android:id="@+id/heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dimen_75dp"
            android:textAllCaps="true"
            android:textColor="?android:textColorPrimary"
            android:textSize="@dimen/dimen_16sp"
            tools:text="Send reminders to others" />

        <TextView
            android:id="@+id/subheading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/dimen_26dp"
            android:layout_marginTop="@dimen/dimen_26dp"
            android:layout_marginStart="@dimen/dimen_26dp"
            android:layout_marginEnd="@dimen/dimen_26dp"
            android:fontFamily="@font/light"
            android:lineSpacingMultiplier="1.2"
            android:textAlignment="center"
            android:textSize="@dimen/dimen_14sp"
            tools:text="You can send reminders to other people by simply selecting a reminder time,date and reminder note." />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>