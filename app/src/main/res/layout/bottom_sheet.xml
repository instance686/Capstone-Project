<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="true"
    android:background="#FFFFFF"
    app:behavior_hideable="true"
    app:behavior_peekHeight="0dp"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardElevation="@dimen/dimen_12dp"
        android:layout_marginTop="@dimen/dimen_1dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button
                android:id="@+id/addLocation"
                style="@android:style/Widget.DeviceDefault.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/dimen_16dp"
                android:drawableStart="@drawable/location_icon"
                android:text="@string/loc"
                android:textAllCaps="false"
                android:textColor="?android:textColorSecondary"
                android:fontFamily="@font/semi_bold"
                android:gravity="start|center_vertical"
                android:onClick="bottomSheetButtonClicked"
                />

            <Button
                android:id="@+id/checkBoxes"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/dimen_16dp"
                android:drawableStart="@drawable/checklist"
                android:text="Switch to Checkbox"
                android:textAllCaps="false"
                android:textColor="?android:textColorSecondary"
                android:fontFamily="@font/semi_bold"
                android:gravity="start|center_vertical"
                android:onClick="bottomSheetButtonClicked"/>

            <Button
                android:id="@+id/note"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/dimen_16dp"
                android:drawableStart="@drawable/ic_edit"
                android:text="Switch to Note"
                android:textAllCaps="false"
                android:textColor="?android:textColorSecondary"
                android:fontFamily="@font/semi_bold"
                android:gravity="start|center_vertical"
                android:onClick="bottomSheetButtonClicked"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:layout_marginBottom="@dimen/dimen_8dp"
                android:layout_gravity="center_horizontal">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/color1"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="#FFFFFF"
                    app:civ_border_width="@dimen/dimen_1dp"
                    app:civ_border_color="#BDBDBD"
                    android:layout_marginStart="@dimen/dimen_16dp"
                    android:onClick="bottomSheetButtonClicked"
                    />
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/color2"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="#B39DDB"
                    app:civ_border_width="@dimen/dimen_1dp"
                    app:civ_border_color="#BDBDBD"
                    android:layout_marginStart="@dimen/dimen_16dp"
                    android:onClick="bottomSheetButtonClicked"
                    />
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/color3"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="#81D4FA"
                    app:civ_border_width="@dimen/dimen_1dp"
                    app:civ_border_color="#BDBDBD"
                    android:layout_marginStart="@dimen/dimen_16dp"
                    android:onClick="bottomSheetButtonClicked"
                    />
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/color4"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="#FFE082"
                    app:civ_border_width="@dimen/dimen_1dp"
                    app:civ_border_color="#BDBDBD"
                    android:layout_marginStart="@dimen/dimen_16dp"
                    android:onClick="bottomSheetButtonClicked"
                    />
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/color5"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="#FFCC80"
                    app:civ_border_width="@dimen/dimen_1dp"
                    app:civ_border_color="#BDBDBD"
                    android:layout_marginStart="@dimen/dimen_16dp"
                    android:onClick="bottomSheetButtonClicked"
                    />
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/color6"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="#ef9a9a"
                    app:civ_border_width="@dimen/dimen_1dp"
                    app:civ_border_color="#BDBDBD"
                    android:layout_marginStart="@dimen/dimen_16dp"
                    android:layout_marginEnd="@dimen/dimen_16dp"
                    android:onClick="bottomSheetButtonClicked"
                    />
            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

</android.support.v4.widget.NestedScrollView>